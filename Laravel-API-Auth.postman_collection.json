                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api-keys",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api-keys"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete API Key",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api-keys/1",
                            "host": [
                                "{{base_url}}"
