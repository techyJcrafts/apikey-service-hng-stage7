            ]
        },
        {
            "name": "API Keys",
            "item": [
                {
                    "name": "Create API Key",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.key) {",
                                    "    pm.environment.set(\"api_key\", jsonData.key);",
                                    "    console.log(\"API Key set to environment variable: api_key\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{jwt_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Service Key\",\n    \"expires_at\": 30\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/keys/create",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "keys",
                                "create"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "List API Keys",
                    "request": {
                        "auth": {
                            "type": "bearer",
